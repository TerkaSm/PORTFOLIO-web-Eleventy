<!--Popup with form for footer contact-->

<div class="popup" id="popup">
    <div class="popup__content">
        <form class="form" method="post" action="https://submit-form.com/E2Nin5Ux">
            <h3 class="heading-tertiary">Neváhejte napsat</h3>
            <div class="form__group">
                <label class="form__label" for="name">Jméno a příjmení</label>
                <input class="form__input" type="text" name="name" id="name" required>
            </div>
    
            <div class="form__group">
                <label class="form__label" for="email">Email</label>
                <input class="form__input" type="email" name="email" id="email" required>
            </div>
            <div class="form__group">
                <label class="form__label" for="text">Text</label>
                <textarea class="form__textarea" name="text" id="text" rows="5"></textarea>
            </div>
            <button class="btn btn--dark" type="submit">Odeslat</button>
        </form>
        <a class="popup__icon-close" href="/"><img src="/icons/icon-close.svg" alt="ikona zavření"></a>
    </div>
</div>